{% extends 'base_painel.html.twig' %}

{% block topo_painel %}
    <h3>Listando Comprar</h3>
{% endblock %}

{% block body_painel %}
    {% for compra in compras %}
        <div class="card mt-2">
            <div class="card-body">
                <div class="col-md-1">
                    <img src="{{ asset(caminho_imagens ~ compra.servico.imagem) }}" alt="{{ compra.servico.titulo }}" width="60">
                </div>
                <div class="col-md-5">
                    <h5>{{ compra.servico.titulo }}</h5>
                </div>
                <div class="col-md-2">
                    <p>{{ compra.dataCadastro | date("d/m/Y") }}</p>
                </div>
                <div class="col-md-3">
                    <p>{{ compra.freelancer.nome }}</p>
                </div>
                <div class="col-md-1">
                    {# <a #}
                </div>
            </div>
        </div>
    {% else %}
        <div class="card mb-2">
            <div class="card-body">
                <div class="alert alert-warning">Nenhum Servi√ßo Encontrado</div>
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block title %}
    Listando compras de {{ app.user.nome }}
{% endblock %}